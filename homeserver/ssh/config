# An attempt to secure ssh clients
# See https://stribika.github.io/2015/01/04/secure-secure-shell.html
# Generate new keys with:
# ssh-keygen -t ed25519 -o -a 100
# ssh-keygen -t rsa -b 4096 -o -a 100

# Github needs diffie-hellman-group-exchange-sha1 some of the time but not always.
Host github.com
    KexAlgorithms curve25519-sha256@libssh.org,diffie-hellman-group-exchange-sha256,diffie-hellman-group-exchange-sha1,diffie-hellman-group14-sha1

Host *
    ##PasswordAuthentication no
    #KexAlgorithms curve25519-sha256@libssh.org,diffie-hellman-group-exchange-sha256
    #ChallengeResponseAuthentication no
    #Ciphers chacha20-poly1305@openssh.com,aes256-gcm@openssh.com,aes128-gcm@openssh.com,aes256-ctr,aes192-ctr,aes128-ctr
    #MACs hmac-sha2-512-etm@openssh.com,hmac-sha2-256-etm@openssh.com,hmac-ripemd160-etm@openssh.com,umac-128-etm@openssh.com,hmac-sha2-512,hmac-sha2-256,hmac-ripemd160,umac-128@openssh.com

Host freeshell
    User hanavi
    HostName meta.sdf.org
    ForwardX11 yes

Host docker
    User james
    Hostname 10.1.0.178

Host openbsd
    User james
    Hostname 10.1.0.20

Host freebsd
    User james
    Hostname 10.1.0.21

Host netbsd
    User james
    Hostname 10.1.0.22

Host mom
    User james
    Hostname mom.hanavi.info
    Port 10022
    ForwardX11 no

Host momserver
    User james
    Hostname 10.1.0.9
    ForwardX11 yes

Host torserver
    User james
    Hostname 10.1.0.17

Host torrentserver
    User james
    Hostname 10.1.0.19
    #LocalForward 8080 localhost:8080

Host *.onion
    ProxyCommand socat - SOCKS4A:localhost:%h:%p,socksport=9150

Host tor_freeshell
    User hanavi
    HostName meta.sdf.org
    ProxyCommand socat - SOCKS4A:localhost:%h:%p,socksport=9150

Host tor_freeshell_2
    User hanavi
    HostName nsdf.sdf.org
    ProxyCommand socat - SOCKS4A:localhost:%h:%p,socksport=9150

Host torhome
    User james
    Hostname t2lixfd5qmmlyxx2.onion
